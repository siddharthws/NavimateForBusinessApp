<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Custom styles -->
        <item name="editTextStyle">@style/AppTheme.Widget.EditText</item>
    </style>

    <!-- Theme for date picker dialog -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--
        Text View Styles
    -->
    <style name="AppTheme.Widget.TextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nvm_font</item>
    </style>

    <style name="AppTheme.Widget.TextView.Label" parent="AppTheme.Widget.TextView">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/textsize_description</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        Edit Text Styles
    -->
    <style name="AppTheme.Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/nvm_font</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="backgroundTint">@color/lightGrey</item>
    </style>

</resources>
