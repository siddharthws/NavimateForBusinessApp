<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dialog Title related attributes -->
    <declare-styleable name="DialogTitle">
        <attr name="image"         format="integer" />
        <attr name="text"          format="string" />
    </declare-styleable>

    <!-- NvmToolbar Attributes -->
    <declare-styleable name="NvmToolbar">
        <!-- Toolbar Title -->
        <attr name="title"    format="string" />

        <!-- Button visibility -->
        <attr name="backBtn"    format="boolean" />
        <attr name="editBtn"    format="boolean" />
        <attr name="saveBtn"    format="boolean" />
    </declare-styleable>

    <!-- Labelled View Attributes -->
    <declare-styleable name="LabelBox">
        <!-- Label -->
        <attr name="label"    format="string" />
    </declare-styleable>

    <!-- Clearable Edit Text related attributes -->
    <declare-styleable name="EtClearable">
        <attr name="android:inputType" />
    </declare-styleable>

    <!-- Dropdown related attributes -->
    <declare-styleable name="Dropdown">
    </declare-styleable>

    <!-- Date Editor related attributes -->
    <declare-styleable name="DateEditor">
    </declare-styleable>
</resources>