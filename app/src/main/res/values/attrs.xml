<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Text Attributes -->
    <declare-styleable name="Text">
        <attr name="bold"           format="boolean" />
        <attr name="italic"         format="boolean" />
    </declare-styleable>

    <!-- Dialog Title related attributes -->
    <declare-styleable name="DialogTitle">
        <attr name="image"         format="integer" />
        <attr name="text"          format="string" />
    </declare-styleable>
</resources>