<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_bg_notification"
    android:orientation="horizontal"
    android:padding="@dimen/m_small">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_small_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/app_icon_white"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_small"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize_description"/>

            <ImageView
                android:id="@+id/iv_small_dot"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/m_xs"
                android:layout_gravity="center"
                android:src="@drawable/white_dot"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_xs"
                android:text="time"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize_description"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_xs"
            android:text="Good Morning"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_primary_small"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/notif_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_xxs"
            android:text="It's time to start work !"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_description"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/notif_icon2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/app_icon_white" />


</LinearLayout>