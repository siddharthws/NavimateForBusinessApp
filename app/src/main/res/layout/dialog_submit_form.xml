<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_dialog_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/m_small"
        android:paddingRight="@dimen/m_large"
        android:paddingBottom="@dimen/m_small"
        android:paddingLeft="@dimen/m_large"
        android:layout_margin="@dimen/m_large"
        android:background="@drawable/bg_white_shadow_slant"
        android:clickable="true">

        <com.biz.navimate.views.RlDialogTitle
            android:id="@+id/rl_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="Submit Form"/>

        <LinearLayout
            android:id="@+id/rl_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_dialog_title"
            android:layout_marginTop="@dimen/m_small"
            android:orientation="horizontal">

            <com.biz.navimate.views.TvCalibri
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sales : "/>

            <com.biz.navimate.views.EtCalibri
                android:id="@+id/et_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="number"
                android:maxLines="1"
                android:hint="Enter sales amount..."
                android:padding="@dimen/m_small"
                android:layout_marginLeft="@dimen/m_small"
                android:background="@drawable/bg_textbox"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_sales"
            android:layout_marginTop="@dimen/m_small"
            android:orientation="horizontal">

            <com.biz.navimate.views.TvCalibri
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes : "/>

            <com.biz.navimate.views.EtCalibri
                android:id="@+id/et_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:minLines="3"
                android:hint="Enter notes here..."
                android:padding="@dimen/m_small"
                android:layout_marginLeft="@dimen/m_small"
                android:background="@drawable/bg_textbox"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_radio_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_notes"
            android:layout_marginTop="@dimen/m_small"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.biz.navimate.views.TvCalibri
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status : "/>

            <RadioGroup
                android:id="@+id/rg_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_failed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Failed"
                    app:buttonTint="@color/colorPrimary"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_waiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting"
                    app:buttonTint="@color/colorPrimary"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    app:buttonTint="@color/colorPrimary"/>

            </RadioGroup>

        </LinearLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cbCloseTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_radio_list"
            android:layout_marginTop="@dimen/m_small"
            android:text="Close Task"
            app:buttonTint="@color/colorPrimary"/>

        <RelativeLayout
            android:id="@+id/rlDialogButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/cbCloseTask"
            android:layout_marginTop="@dimen/m_small">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="Submit"
                android:textSize="@dimen/textsize_primary_small"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_toRightOf="@id/btn_submit"
                android:text="Cancel"
                android:textSize="@dimen/textsize_primary_small"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>