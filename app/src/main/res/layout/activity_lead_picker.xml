<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.LeadPickerActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_toolbar_pick_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/m_small"
        android:background="@drawable/bg_primary_shadow_down"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_toolbar_back"
            android:layout_width="@dimen/toolbar_button_height_width"
            android:layout_height="@dimen/toolbar_button_height_width"
            android:padding="@dimen/toolbar_button_padding"
            android:background="?attr/selectableItemBackground"
            android:src="@mipmap/icon_back_white"
            android:scaleType="fitXY"
            android:onClick="ButtonClickBack"/>

        <com.biz.navimate.views.TvCalibri
            android:id="@+id/tv_selected_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/m_small"
            app:bold="true"
            android:textSize="@dimen/textsize_primary_small"
            android:textColor="@android:color/white"/>

        <ImageButton
            android:id="@+id/ib_toolbar_done"
            android:layout_width="@dimen/toolbar_button_height_width"
            android:layout_height="@dimen/toolbar_button_height_width"
            android:padding="@dimen/toolbar_button_padding"
            android:background="?attr/selectableItemBackground"
            android:src="@mipmap/icon_tick_white"
            android:scaleType="fitXY"
            android:onClick="ButtonClickDone"/>

    </LinearLayout>

    <com.biz.navimate.views.RlListView
        android:id="@+id/rlv_leads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_toolbar_pick_contacts">
    </com.biz.navimate.views.RlListView>

</RelativeLayout>