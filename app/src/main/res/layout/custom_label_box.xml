<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Label -->
    <TextView
        android:id="@+id/tv_lbl_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/m_xs"
        style="@style/AppTheme.Widget.TextView.Label"/>

    <!-- Child View Container -->
    <com.biz.navimate.views.custom.NvmCardView
        android:id="@+id/cv_lbl_child_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m_small">

        <RelativeLayout
            android:id="@+id/rl_lbl_child_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RelativeLayout>

    </com.biz.navimate.views.custom.NvmCardView>

    <!-- Error label -->
    <TextView
        android:id="@+id/tv_lbl_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Widget.TextView.Error"
        android:visibility="gone"/>

</merge>